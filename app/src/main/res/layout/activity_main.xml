<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="#fff"
        tools:context=".MainActivity">

    <com.mindorks.RadialProgressBar
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/progress"
            app:useRoundedCorner="true"
            app:innerMaxProgress="100"
            app:outerMaxProgress="100"
            app:hasEmptyProgressBar="false"
            android:layout_centerInParent="true"
            app:isAnimationOn="true"
            app:hasTwoProgressView="true"
            app:hasOneProgressView="false"
    />
    <TextView
            android:id="@+id/txtvStatusCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/progress"
            android:layout_centerHorizontal="true"
            android:text="@string/preparing"
            android:textSize="18sp" android:layout_marginBottom="-109dp"/>

</RelativeLayout>